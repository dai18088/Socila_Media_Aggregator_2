<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


     <Button
         android:id="@+id/Hashtag_Button"
         android:layout_width="342dp"
         android:layout_height="28dp"
         android:layout_marginBottom="12dp"
         android:background="#159E1B"
         android:text="Trending Hashtag"
         app:layout_constraintBottom_toTopOf="@+id/login_button_facebook"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent" />

     <FrameLayout
         android:id="@+id/content_frame"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:layout_editor_absoluteX="-16dp"
         tools:layout_editor_absoluteY="16dp">

     </FrameLayout>

     <com.facebook.login.widget.LoginButton
         android:id="@+id/login_button_facebook"
         android:layout_width="339dp"
         android:layout_height="30dp"
         android:layout_gravity="center_horizontal"
         android:layout_marginStart="2dp"
         android:layout_marginEnd="8dp"
         android:layout_marginBottom="8dp"
         app:layout_constraintBottom_toTopOf="@+id/uploadButton"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.564"
         app:layout_constraintStart_toStartOf="parent" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="32dp"
         android:layout_height="34dp"
         android:layout_marginStart="32dp"
         android:layout_marginEnd="5dp"
         android:layout_marginBottom="98dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toStartOf="@+id/instagram_sign_in_button"
         app:layout_constraintStart_toStartOf="parent"
         app:srcCompat="@drawable/instagram_1581266_1920" />

     <Button
         android:id="@+id/instagram_sign_in_button"
         android:layout_width="310dp"
         android:layout_height="30dp"
         android:layout_marginEnd="22dp"
         android:layout_marginBottom="100dp"
         android:background="#C63063"
         android:text="Continue with Instagram"
         android:textColor="#F8E009"
         android:textSize="18sp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent" />


     <com.facebook.share.widget.ShareButton
         android:id="@+id/share_photo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="8dp"
         android:layout_marginBottom="55dp"
         android:text="Share Photo"
         app:layout_constraintBottom_toTopOf="@+id/login_button_facebook"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent" />

     <com.facebook.share.widget.ShareButton
         android:id="@+id/share_Link"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="8dp"
         android:layout_marginBottom="16dp"
         android:text="Share Link"
         app:layout_constraintBottom_toTopOf="@+id/share_photo"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent" />


     <ImageView
         android:id="@+id/iv_pic"
         android:layout_width="194dp"
         android:layout_height="137dp"
         android:layout_marginTop="20dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         tools:srcCompat="@tools:sample/backgrounds/scenic" />

     <Button
         android:id="@+id/uploadButton"
         android:layout_width="337dp"
         android:layout_height="31dp"
         android:layout_marginBottom="8dp"
         android:background="#C63063"
         android:text="Instagram Post"
         android:textColor="#F8E009"
         app:layout_constraintBottom_toTopOf="@+id/instagram_sign_in_button"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>